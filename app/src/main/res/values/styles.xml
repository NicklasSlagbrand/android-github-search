<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MaterialTheme.DarkToolbar.ActionBar.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentBarsTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="WhiteToolbarBackArrow" parent="AppTheme">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="WhiteBackground" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="NoTitleTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AoMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/MuliBlackTextAppearance</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/color_rounded_button</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="AoTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/MuliExtraBoldTextAppearance</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Screen.FilledBlueButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/darkSkyBlue</item>
        <item name="android:textAppearance">@style/MuliBoldTextAppearance</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">30dp</item>
        <item name="strokeColor">@color/darkSkyBlue</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Screen.NotFilledBlueButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/MuliBoldTextAppearance</item>
        <item name="android:textColor">@color/darkSkyBlue</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">30dp</item>
        <item name="strokeColor">@color/darkSkyBlue</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Baseline.ProgressBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/darkSkyBlue</item>
    </style>

    <style name="Chip.Skills" parent="Widget.MaterialComponents.Chip.Action">
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
    </style>
</resources>
