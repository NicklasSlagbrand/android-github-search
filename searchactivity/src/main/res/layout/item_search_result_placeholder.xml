<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <View
        android:id="@+id/tvTitlePlaceholder"
        android:background="@color/gray"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/ivAvatarPlaceholder"
        app:layout_constraintStart_toEndOf="@+id/ivAvatarPlaceholder"/>

    <View
        android:id="@+id/ivAvatarPlaceholder"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@tools:sample/avatars"/>

    <View
        android:background="@color/gray"
        android:id="@+id/tvDescriptionPlaceholder1"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvTitlePlaceholder"
        app:layout_constraintTop_toBottomOf="@+id/tvTitlePlaceholder"
        tools:text="@tools:sample/lorem/random" />

    <View
        android:background="@color/gray"
        android:id="@+id/tvDescriptionPlaceholder2"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvDescriptionPlaceholder1"
        app:layout_constraintTop_toBottomOf="@+id/tvDescriptionPlaceholder1"
        tools:text="@tools:sample/lorem/random" />

</androidx.constraintlayout.widget.ConstraintLayout>
